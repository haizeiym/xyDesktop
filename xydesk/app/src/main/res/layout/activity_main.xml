<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xydesk.xy.MainActivity">

    <FrameLayout
        android:id="@+id/add_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <TextView
            android:id="@+id/up_ping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="上一屏" />

        <TextView
            android:id="@+id/down_ping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="下一屏" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="电话" />

        <TextView
            android:id="@+id/add_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="信息" />

        <TextView
            android:id="@+id/all_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="全部应用" />

        <TextView
            android:id="@+id/add_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="添加应用" />

        <TextView
            android:id="@+id/add_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#cccccc"
            android:clickable="true"
            android:gravity="center"
            android:text="添加应用" />
    </LinearLayout>
</LinearLayout>
